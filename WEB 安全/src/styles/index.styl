@require './common.styl'

body *
  text-align: left
  font-size: 20px

.reveal
  h1, h2, h3, h4, h5, h6
    text-transform: none

.reveal
  font-size: 24px
  h1
    font-size: 40px
    border-bottom: 5px solid #17E5F5
    padding-bottom: 5px
  h2
    font-size: 35px
    border-bottom: 5px solid #F74D9D
    display: inline-block
    margin-bottom: 0
    margin-top: 0
  section
    img
      margin: 0
      background: transparent
      border: 0 none transparent
      box-shadow: 0 0 0 rgba(0, 0, 0, 0)
  pre
    display: inline-block
    code
      max-height: none

